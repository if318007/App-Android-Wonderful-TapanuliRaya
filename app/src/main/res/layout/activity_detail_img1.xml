<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="sans-serif-black"
            android:text="Destinasi Populer di Tobasa"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cc5"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:background="#ffffff"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/text1">

            <RelativeLayout
                android:id="@+id/rt6"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="2" />

            <ImageView
                android:id="@+id/imgg4"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/simanimbo"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tt4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    android:paddingLeft="5dp"
                    android:text="Air Terjun Simanimbo"
                    android:textColor="#000000"

                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tr"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tt4"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Air Terjun Simanimbo adalah air terjun bertingkat empat yang aliran airnya terjun langsung ke dalam Danau Bendungan Sigura-Gura. Air terjun ini berada di Desa Simanimbo, Kecamatan Pintu Pohan Meranti, Kabupaten Tobasa."
                    android:textColor="#000000" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_below="@+id/cc5"
            android:id="@+id/cc4"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:background="#ffffff"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:id="@+id/rt5"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="2" />

            <ImageView
                android:id="@+id/imgg5"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/pus"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tt5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    android:paddingLeft="5dp"
                    android:text="Pusuk Buhit "
                    android:textColor="#000000"

                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tt5"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Samosir menyimpan banyak tempat wisata yang menarik. Pusuk Buhit sebenarnya adalah gunung berapi aktif. Tingginya sekitar 1980 meter di atas rata-rata permukaan laut.
                    Gunung ini dikelilingi oleh beberapa desa, seperti Sianjur Mula-Mula, Samosir, dan Pangururan. Saat ini, Pusuk Buhit menjadi tujuan liburan yang menarik di Sumatera Utara karena Pusuk Buhit terkenal dengan cerita urbannya."
                    android:textColor="#000000" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_below="@+id/cc4"
            android:id="@+id/cca"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="16dp"
            android:background="#ffffff"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp">

            <RelativeLayout
                android:id="@+id/rta"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="2"
               />

            <ImageView
                android:id="@+id/imgg5a"
                android:layout_width="350dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/tuktuk"

                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tt5a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="160dp"
                    android:paddingLeft="5dp"
                    android:text="Desa Tuk Tuk Siadong "
                    android:textColor="#000000"

                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/tt5a"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Pastikan kunjungan anda ke Danau Toba untuk singgah dan menginap di Desa Wisata Tuktuk Siadong; sebuah tempat indah di sebuah tanjung kecil di Pulau Samosir.Di sini, Anda bisa menikmati suasana menawan dengan panorama pinggir danau di mana sudah banyak sekali para wisatawan yang terpukau. Desa Tuktuk Siadong sendiri berlokasi di kecamatan Simanindo, kabupaten Samosir, provinsi Sumatra Utara."
                    android:textColor="#000000"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</ScrollView>